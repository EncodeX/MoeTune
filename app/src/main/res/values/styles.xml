<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:fitsSystemWindows">true</item>
	</style>

	<style name="AppTheme.UnboundedButton.White.Borderless" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/ripple_background_white</item>
		<item name="android:gravity">center</item>
		<item name="android:minWidth">0dip</item>
		<item name="android:minHeight">0dip</item>
	</style>
	<style name="AppTheme.UnboundedButton.Borderless" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/ripple_background_primary</item>
		<item name="android:gravity">center</item>
		<item name="android:minWidth">0dip</item>
		<item name="android:minHeight">0dip</item>
	</style>

	<style name="AppTheme.Button" parent="Widget.AppCompat.Button">
		<item name="android:background">@drawable/btn_primary</item>
		<item name="android:textColor">@android:color/white</item>
	</style>


	<style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless.Colored">
		<item name="android:background">@drawable/btn_primary</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="AppTheme.NotificationText">
		<item name="android:textColor">?android:attr/textColorSecondary</item>
	</style>

	<style name="AppTheme.NotificationTitle">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>

	<style name="AppTheme.NotificationTitleBold">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
		<item name="android:textStyle">bold</item>
	</style>
</resources>
