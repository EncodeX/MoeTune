<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="128dp">
    <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/notification_big_album"
            android:src="@drawable/ic_app_album_medium"
            android:scaleType="centerCrop"/>
    <RelativeLayout
            android:id="@+id/notification_big_info"
            android:layout_width="fill_parent"
            android:layout_height="88dp"
            android:padding="8dp"
            android:layout_toRightOf="@id/notification_big_album">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
            <TextView
                    android:id="@+id/notification_big_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="center"
                    style="@style/AppTheme.NotificationTitle"
                    android:text="MoeTune"
                    android:layout_centerHorizontal="true"/>
            <TextView
                    android:id="@+id/notification_big_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notification_big_title"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:gravity="center"
                    style="@style/AppTheme.NotificationText"
                    android:text="Moetune"
                    android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/notification_big_buttons"
            android:layout_width="fill_parent"
            android:layout_toRightOf="@id/notification_big_album"
            android:layout_alignParentBottom="true"
            android:gravity="start"
            style="@style/AppTheme.UnboundedButton.Transparent.Borderless"
            android:clickable="false"
            android:layout_height="72dp">
	    <ImageButton
		    android:id="@+id/notification_big_play_button"
		    android:layout_width="48dp"
		    android:layout_height="48dp"
		    android:padding="8dp"
		    android:src="@drawable/ic_play"
		    android:scaleType="centerCrop"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"
		    style="@style/AppTheme.UnboundedButton.Borderless"/>
	    <ImageButton
		    android:id="@+id/notification_big_prev_button"
		    android:layout_width="48dp"
		    android:layout_height="48dp"
            android:padding="8dp"
		    android:src="@drawable/ic_prev"
		    android:layout_toLeftOf="@id/notification_big_play_button"
		    android:layout_marginRight="4dp"
		    android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
		    style="@style/AppTheme.UnboundedButton.Borderless"/>
	    <ImageButton
		    android:id="@+id/notification_big_next_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
		    android:src="@drawable/ic_next"
		    android:layout_toRightOf="@id/notification_big_play_button"
		    android:layout_marginLeft="4dp"
		    android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
		    style="@style/AppTheme.UnboundedButton.Borderless"/>
    </RelativeLayout>
</RelativeLayout>