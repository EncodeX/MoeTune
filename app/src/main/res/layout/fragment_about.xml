<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:paddingLeft="?actionBarSize"
        app:titleTextColor="@android:color/white"
        app:title="关于"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
	    android:padding="8dp">
        <ImageView
            android:id="@+id/about_app_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_app_circle"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/about_app_name"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/about_app_icon"
            android:textSize="50sp"
            android:textIsSelectable="false"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/about_app_version"
            android:text="0.3.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_app_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textSize="24sp"
            android:textIsSelectable="false"
            android:textColor="@android:color/white"/>
        <RelativeLayout
            android:id="@+id/about_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_app_version"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp">
            <ImageView
                android:id="@+id/about_author_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/avatar_author"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/about_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/about_author_avatar"
                android:layout_alignBottom="@id/about_author_avatar"
                android:layout_marginLeft="8dp"
                android:textColor="@android:color/white"
                android:text="Code &amp; UI Design by\nC4H4"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/about_icon_designer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_author"
            android:layout_alignLeft="@id/about_author"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/about_icon_designer_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/avatar_designer"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/about_icon_designer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/about_icon_designer_avatar"
                android:layout_alignBottom="@id/about_icon_designer_avatar"
                android:layout_marginLeft="8dp"
                android:textColor="@android:color/white"
                android:text="App Icon Design by\n深山完完_uryyyy"/>
        </RelativeLayout>
        <Button
            android:id="@+id/about_rate_button"
            android:layout_width="240dp"
            android:layout_height="56dp"
            android:layout_below="@id/about_icon_designer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            style="@style/AppTheme.Button"
            android:elevation="2dp"
            android:text="觉得不错？给我评分"/>
    </RelativeLayout>
</RelativeLayout>